<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.cust.dew.vo.Requirement" table="requirement">
    <id name="reid" column="reid">
      <generator class="increment"/>
    </id>
    <property name="reconame" column="reconame" type="string"></property>
    <property name="redetail" column="redetail" type="string"></property>
    <property name="recotype" column="recotype" type="string"></property>
    <property name="recotype2" column="recotype2" type="string"></property>
    <property name="reconewold" column="reconewold" type="string"></property>
    <property name="reconumber" column="reconumber" type="integer"></property>
    <property name="recoimg" column="recoimg" type="string"></property>
    <many-to-one name="teid"  column="teid" class="com.cust.dew.vo.Teacher" unique="true"></many-to-one> 
  </class>
</hibernate-mapping>