<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.cust.dew.vo.School" table="school">
    <id name="shid" column="shid"></id>
    <property name="shname" column="shname" type="string"></property> 
    <many-to-one name="coid"  column="coid" class="com.cust.dew.vo.Commodity" unique="true"></many-to-one>   
    <property name="schoolimg" column="schoolimg" type="string"></property>
  </class>
</hibernate-mapping>