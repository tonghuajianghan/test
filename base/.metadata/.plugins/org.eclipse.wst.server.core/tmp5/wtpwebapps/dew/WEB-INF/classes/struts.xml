<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />
    
    <bean type="org.apache.struts2.dispatcher.multipart.MultiPartRequest"
		name="myRequestParser" class="com.icf.common.base.actions.RequestParseWrapper"
		scope="default" optional="true " />
	<constant name="struts.multipart.handler" value="myRequestParser" />

    <package name="defult" extends="struts-default" > 
        <!-- 商品 -->
        <action name="commodity" class="com.cust.dew.action.CommodityAction">
            <!-- <result name="success">/page/commodityshow/CommodityShow.jsp</result> -->
            <result name="IT">/page/commodityshow/it.jsp</result>
            <result name="book">/page/commodityshow/book.jsp</result>
            <result name="bycycle">/page/commodityshow/bycycle.jsp</result>  
            <result name="collback">index.jsp</result>  
            <result name="index">index.jsp</result>    
        </action>
        <!-- 需求      -->
        <action name="requirement" class="com.cust.dew.action.RequirementAction">
            <result name="success">/page/requirementShow/requirementShow.jsp</result>                 
        </action>
        <!-- 需求分页 -->
        <action name="requirementpage" class="com.cust.dew.action.RequirementPageAction">
            <result name="success">/page/requirementShow/requirementSortShow.jsp</result>                 
        </action>
        <!-- 注册      -->
        <action name="register" class="com.cust.dew.action.RegisterAction">
            <result name="success">/page/user/personalcenter.jsp</result>  
            <result name="collback">/page/user/register.jsp</result>     
        </action>
        <!-- 个人中心 -->
        <action name="login" class="com.cust.dew.action.LoginAction">
            <result name="success">/page/user/personalcenter.jsp</result>  
            <result name="collback">/page/user/login.jsp</result>     
        </action>
        <action name="user" class="com.cust.dew.action.UserAction">
            <result name="commoditysuccess">/page/user/release/releaseCommoditySuccess.jsp </result>           
            <result name="requirementsuccess">/page/user/release/releaseRequirementSuccess.jsp</result>  
            <result name="collback">/page/user/login.jsp</result>     
        </action>
        <!-- 商品上传 -->
        <action name="commodityupload" class="com.cust.dew.action.PersonCommodityUploadAction">
            <result name="commoditysuccess">/page/user/release/releaseCommoditySuccess.jsp </result>           
            <result name="requirementsuccess">/page/user/release/releaseRequirementSuccess.jsp</result>  
            <result name="collback">/page/user/login.jsp</result>     
        </action>
        <!-- 需求上传 -->
        <action name="requirementupload" class="com.cust.dew.action.PersonRequirementUploadAction">
            <result name="commoditysuccess">/page/user/release/releaseCommoditySuccess.jsp </result>           
            <result name="requirementsuccess">/page/user/release/releaseRequirementSuccess.jsp</result>  
            <result name="collback">/page/user/login.jsp</result>     
        </action>
        <!-- 个人资料上传 -->
        <action name="accountupload" class="com.cust.dew.action.PersonAccountUploadAction">
            <result name="accountsuccess">/page/user/release/releaseAccountSuccess.jsp </result>                                           
            <result name="collback">/page/user/login.jsp</result>     
        </action>
        <!-- 地图 -->
        <action name="map" class="com.cust.dew.action.MapAction">
             <result name="success">/page/detail/map.jsp</result>
        </action>
        <!-- 图片处理 -->
        <action name="imageLaction" class="com.cust.dew.action.ImageAction"></action>
    </package>
    
