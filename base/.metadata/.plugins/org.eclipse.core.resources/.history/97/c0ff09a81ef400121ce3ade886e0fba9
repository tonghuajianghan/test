<script type="text/javascript">
function createXMLHttp() {
	if (typeof XMLHttpRequest != "undefined") {
		return new XMLHttpRequest();
	} else {
		if (window.ActiveXObject) {
			var aVersions = ["MSXML2.XMLHttp.5.0", "MSXML2.XMLHttp.4.0", "MSXML2.XMLHttp.3.0", "MSXML2.XMLHttp", "Microsoft.XMLHttp"];
			for (var i = 0; i < aVersions.length; i++) {
				try {
					return new ActiveXObject(aVersions[i]);
				}
				catch (e) {
					alert("对不起，浏览器发送请求出错！");
				}
			}
		}
	}
}
function hide(){
	document.getElementById("cover").style.display = "none";
	document.getElementById("codeList").style.display = "none";
}
<%
Patent pt = (Patent) request.getAttribute("patent");
%>
function manageAuthor(){
	window.open("mAuthor.action?method=manageAuthors&show=true&type=1&outId=<%=pt.getID() %>","authorFrame");
	document.getElementById("author").style.display="block";
	document.getElementById("cover_c").style.display="block";
}
function hideAuthor(){
	document.getElementById("cover_c").style.display = "none";
	document.getElementById("author").style.display = "none";
}
</script>
