	<script>
		$("#mainPage").bind("pageshow", function(e) {
			var data = ['½ªêÏ','C', 'Clojure', 'Java', 'Scala', 'Objective-C', 'C++', 'PHP', 'C#', '(Visual) Basic', 'Python', 'Perl', 'JavaScript', 'Ruby', 'Visual Basic .NET', 'Transact-SQL', 'Lisp', 'Pascal', 'Bash', 'PL/SQL', 'Delphi/Object Pascal', 'Ada', 'MATLAB'];
			$("#searchField").autocomplete({
				target: $('#suggestions'),
