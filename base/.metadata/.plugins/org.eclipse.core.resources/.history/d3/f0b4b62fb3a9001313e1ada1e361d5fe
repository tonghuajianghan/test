package com.cust.dew.dao.impl;

import java.util.List;

import org.hibernate.Query;
import org.hibernate.Session;

import com.cust.dew.vo.Commodityteacher;

public class CommodityteacherDBDao {
	public void saveCommodityteacher(Commodityteacher a){
		  Session	session = ConnectionFactory.beginSession();
			session.beginTransaction();
			session.save(a);
			session.getTransaction().commit();
		    ConnectionFactory.colseSessionAndSessionFactory();
	  }
	  public List<Commodityteacher> queryCommodityteacherById(int id) {
			Session	session = ConnectionFactory.beginSession();
			session.beginTransaction();
			Query query = session.createQuery("from Commodityteacher where id='" + id
					+ "'");
			session.getTransaction().commit();	    
		    return query.list();		
		}
		
		public List<Commodityteacher> queryCommodityteacher(){
		    Session	session = ConnectionFactory.beginSession();
			session.beginTransaction();
			Query query = session.createQuery("from Commodityteacher");		
		    session.getTransaction().commit();
			//ConnectionFactory.colseSessionAndSessionFactory();
			
			return query.list();
		}

		public boolean deleteCommodityteacherById(int id) {
			Session	session = ConnectionFactory.beginSession();
			session.beginTransaction();	
			Commodityteacher a = new Commodityteacher();
			a = (Commodityteacher) session.get(Commodityteacher.class, id);
			session.delete(a);
			session.getTransaction().commit();
			ConnectionFactory.colseSessionAndSessionFactory();
			return true;
		}

		public boolean insertCommodityteacherById() {
			// TODO Auto-generated method stub
			return false;
		}
}
