package com.cust.dew.dao.impl;

import java.util.List;

import org.hibernate.Query;
import org.hibernate.Session;

import com.cust.dew.vo.Administrator;

public class AdministratorDBDao {
  public void saveAdministrator(Administrator a){
	  Session	session = ConnectionFactory.beginSession();
		session.beginTransaction();
		session.save(a);
		session.getTransaction().commit();
	    ConnectionFactory.colseSessionAndSessionFactory();
  }
  public List<Administrator> queryAdministratorById(int id) {
		Session	session = ConnectionFactory.beginSession();
		session.beginTransaction();
		Query query = session.createQuery("from Administrator where id='" + id
				+ "'");
		session.getTransaction().commit();	    
	    return query.list();		
	}
	
	public List<Administrator> queryAdministrator(){
	    Session	session = ConnectionFactory.beginSession();
		session.beginTransaction();
		Query query = session.createQuery("from Administrator");		
	    session.getTransaction().commit();
		//ConnectionFactory.colseSessionAndSessionFactory();
		
		return query.list();
	}

	public boolean deleteAdministratorById(int id) {
		Session	session = ConnectionFactory.beginSession();
		session.beginTransaction();	
		Administrator a = new Administrator();
		a = (Administrator) session.get(Administrator.class, id);
		session.delete(a);
		session.getTransaction().commit();
		ConnectionFactory.colseSessionAndSessionFactory();
		return true;
	}

	public boolean insertAdministratorById() {
		// TODO Auto-generated method stub
		return false;
	}
}
