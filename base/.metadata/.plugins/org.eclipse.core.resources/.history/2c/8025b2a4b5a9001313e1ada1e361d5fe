package com.cust.dew.dao.impl;

import java.util.List;

import org.hibernate.Query;
import org.hibernate.Session;

import com.cust.dew.vo.Teacher;

public class TeacherDBDao {
  public void saveTeacher(Teacher t){
	  Session	session = ConnectionFactory.beginSession();
		session.beginTransaction();
		session.save(t);
		session.getTransaction().commit();
	    ConnectionFactory.colseSessionAndSessionFactory();
  }
  public List<Teacher> queryTeacherById(int id) {
		Session	session = ConnectionFactory.beginSession();
		session.beginTransaction();
		Query query = session.createQuery("from Teacher where id='" + id
				+ "'");
		session.getTransaction().commit();	    
	    return query.list();		
	}
	
	public List<Teacher> queryTeacher(){
	    Session	session = ConnectionFactory.beginSession();
		session.beginTransaction();
		Query query = session.createQuery("from Teacher");		
	    session.getTransaction().commit();
		//ConnectionFactory.colseSessionAndSessionFactory();
		
		return query.list();
	}

	public boolean deleteTeacherById(int id) {
		Session	session = ConnectionFactory.beginSession();
		session.beginTransaction();	
		Teacher t = new Teacher();
		t = (Teacher) session.get(Teacher.class, id);
		session.delete(t);
		session.getTransaction().commit();
		ConnectionFactory.colseSessionAndSessionFactory();
		return true;
	}

	public boolean insertTeacherById() {
		// TODO Auto-generated method stub
		return false;
	}
}
