<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<!-- 本文件是为tomcat使用的，其他应用服务器用不到，它们有自己的配置方式 -->
	
	<!-- 定义数据库连接池 -->
	<Resource name="jdbc/demo" auth="Container" type="javax.sql.DataSource"
		maxActive="100" maxIdle="30" maxWait="10000" username="sa"
		password="123456" driverClassName="com.microsoft.sqlserver.jdbc.SQLServerDriver"
		url="jdbc:sqlserver://192.168.6.3:1433;DatabaseName=unperm" />
		
	<!-- 定义J2EE安全，用户及角色都保存在数据库中 -->
	<Realm className="org.apache.catalina.realm.DataSourceRealm"
		localDataSource="true" dataSourceName="jdbc/demo" userTable="c_account"
		userNameCol="c_id" userCredCol="c_pass" userRoleTable="c_account_roles"
		roleNameCol="c_role" />
</Context>