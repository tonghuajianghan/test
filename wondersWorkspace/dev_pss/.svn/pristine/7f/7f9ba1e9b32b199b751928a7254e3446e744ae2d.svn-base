/* Layout */
body, html { overflow-x:auto; background:#fff; }

.layout-admin { visibility:hidden; _visibility:visible; width:1024px; margin:0 auto; background:#fafaff; }
.layout-admin .la-l { width:216px; float:left; }
.layout-admin .la-l .logo { height:78px; background:url(../../images/admin/logo.png) no-repeat top; }
.layout-admin .la-l .menu { min-height:800px; _height:800px; background:url(../../images/admin/menu-bg.png) repeat-y top; }
.layout-admin .la-r { width:808px; float:right; }
.layout-admin .la-r .nav { height:78px; }
.layout-admin .la-r .banner { height:55px; background:#ecedf2; }

/* Menu */
.la-l .menu ul { padding-top:77px; padding-left:13px; }
.la-l .menu li { padding-left:10px; padding-top:7px; height:51px; color:#fff; font-size:16px; font-family:Microsoft Yahei; background:url(../../images/admin/menu-1.png) no-repeat top; cursor:pointer; }
.la-l .menu li.sel { background-image:url(../../images/admin/menu-2.png); }

/* Nav */
.la-r .nav ul { float:right; margin-top:27px; margin-right:36px; }
.la-r .nav li { float:left; color:#a8a9ad; font-size:18px; font-family:Microsoft Yahei; }
.la-r .nav li a { margin-left:38px; color:#a8a9ad; font-size:18px; font-family:Microsoft Yahei; text-decoration:underline; }

/* Banner */
.la-r .banner dt { margin-top:16px; color:#333; font-size:16px; font-family:Microsoft Yahei; }
.la-r .banner dt.title { margin-left:24px; float:left; }
.la-r .banner dt.cond { margin-right:5px; float:right; }
.la-r .banner dd.back { margin-top:17px; margin-left:10px; float:left; background-image:url(../../images/admin/banner-back.png); }
.la-r .banner dd.back a { width:13px; height:22px; display:block; }
.la-r .banner dd.search { margin-top:17px; margin-right:20px; float:right; background-image:url(../../images/admin/banner-search.png); }
.la-r .banner dd.search a { width:22px; height:22px; display:block; }
.la-r .banner dd.cond { margin-top:12px; margin-right:20px; float:right; }
.la-r .banner dd.cond input { width:130px; height:26px; border:1px #ccc solid; padding:2px 4px; }
.la-r .banner dd.cond select { width:130px; height:32px; border:1px #ccc solid; }

/* Form */
.input, .select, .select-multi, .textarea { border-top:1px #b7b7b7 solid; border-bottom:1px #f6f6f6 solid; border-left:1px #b7b7b7 solid; border-right:1px #f6f6f6 solid; }
.input { color:#333; padding-left:2px; height:18px; line-height:18px; font-size:12px; font-style:normal; }
.select { color:#333; height:20px; *height:24px; /* ie7 or older */ line-height:20px; font-size:12px; font-style:normal; }
*+html .select { margin-bottom:-4px; } /* ie7 only */
.select-multi { color:#333; font-size:12px; font-style:normal; }
.textarea { color:#333; padding-left:2px; margin-top:4px; font-size:12px; font-style:normal; resize:none; }
.checkbox { height:20px; height:19px\9; *+height:26px; width:30px; width:26px\9; *+width:29px; }

table td, table th { word-break:break-all; word-wrap:break-word; }

table.list { width:100%; *width:auto; border-collapse:collapse; table-layout:fixed; }
table.list th, table.list td { height:50px; padding:5px; border-bottom:2px solid #ecedf2; }
table.list th, table.list th a { color:#333; font-size:16px; font-family:Microsoft Yahei; }
table.list td, table.list td a  { color:#75767d; font-size:16px; font-family:Microsoft Yahei; }
table.list a.op { float:left; margin:10px; vertical-align:text-bottom; display:block; }
table.list a.add { width:19px; height:19px; background-image:url(../../images/admin/op-add.png); }
table.list a.del { width:19px; height:19px; background-image:url(../../images/admin/op-del.png); }
table.list a.off { width:19px; height:19px; background-image:url(../../images/admin/op-off.png); }
table.list a.on { width:19px; height:19px; background-image:url(../../images/admin/op-on.png); }
table.list a.pwd { width:19px; height:19px; background-image:url(../../images/admin/op-pwd.png); }
table.list .page-container ul { padding:6px 0 4px 0; float:right;}
table.list .page-container li { float:left; margin-right:5px; }
table.list .page-container li a, table.list .page-container li label { display:inline; border:1px solid #ccc; background:#f6f7fb; padding:4px 10px; color:#75767d; font-size:14px; font-family:Microsoft Yahei; text-decoration:none; }
table.list .page-container li a:hover { border:1px solid #2d64b3; color:#b60606; }
table.list .page-container li label.current { background:#012e8b; color:#fff; }
table.list .page-container li input { margin:-5px 5px 0 0; width:30px; color:#333; padding-left:2px; height:22px; line-height:22px; font-size:14px; font-style:normal; }table td, table th { word-break:break-all; word-wrap:break-word; }

table.edit { width:100%; *width:auto; border-collapse:collapse; table-layout:fixed; }
table.edit th, table.edit td { height:50px; padding:5px; border-bottom:2px solid #ecedf2; }
table.edit th, table.edit th a { color:#333; font-size:16px; font-family:Microsoft Yahei; }
table.edit td, table.edit td a  { color:#75767d; font-size:16px; font-family:Microsoft Yahei; }
table.edit td input.textCont { width:60%; height:26px; border:1px #ccc solid; padding:2px 4px; }
table.edit td input.tagInputCont { width:20%; height:20px; border:1px #ccc solid; }
table.edit td input.tagCont { width:78px; height:27px; border:1px; }
table.edit td .textareaCont { width:85%; border:1px #ccc solid; padding:2px 4px; }
table.edit td select { width:130px; height:26px; border:1px #ccc solid; padding:2px 4px; }

.buttonCont { width:80px; height:26px; border:1px #ccc solid; padding:2px 4px; }